<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/add_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.common.selfdefineview.MainMenuButton
            android:padding="15dp"
            android:id="@+id/device_connect_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"/>
        <TextView
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="@dimen/add_title_height"
            android:text="@string/device_connect_back_title"
            android:textColor="@color/add_title"/>
        <com.common.selfdefineview.MainMenuButton
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/info"
            android:visibility="gone"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:paddingTop="20dp"
        android:layout_height="wrap_content"
        android:src="@drawable/config_device"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp">
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textSize="@dimen/add_title_height"
        android:text="@string/device_connect_psk"
        android:textColor="@color/add3_text"/>
    <EditText
        android:id="@+id/device_connect_psk"
        android:padding="20dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:hint="@string/device_connect_psk_hint"
        android:inputType="textPassword"
        android:textSize="@dimen/add_title_height"
        android:textColor="@color/add_success_text"
        android:background="@null"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/device_connect_showpsk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="15dp"
        android:src="@drawable/psk_close"
        android:visibility="gone"
        />
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="@dimen/one_divider_height"
        android:background="@color/grey"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right">
        <TextView
            android:id="@+id/device_forget_psk_btn"
            android:background="@drawable/selector"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/add_note_height"
            android:text="@string/device_connect_forget_psk"
            android:textColor="@color/add_text"/>
    </LinearLayout>


    <Button
        android:id="@+id/device_connect_btn"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/device_connect_btn"
        android:textSize="@dimen/add_title_height"
        android:textColor="@color/white"
        android:background="@drawable/add_selector"/>
</LinearLayout>
