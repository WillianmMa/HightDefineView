<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/add_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.common.selfdefineview.MainMenuButton
            android:padding="15dp"
            android:id="@+id/video_settings_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"/>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/config_device"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/video_settings_psk"
        android:padding="20dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:hint="@string/video_settings_psk_hint"
        android:textSize="@dimen/add_title_height"
        android:textColor="@color/add_success_text"
        android:inputType="textPassword"
        android:background="@null"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/video_settings_showpsk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="15dp"
        android:src="@drawable/psk_close"
        />
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/one_divider_height"
        android:background="@color/grey"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/video_settings_confirm_psk"
        android:padding="20dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:hint="@string/video_settings_confirm_psk_hint"
        android:textSize="@dimen/add_title_height"
        android:textColor="@color/add_success_text"
        android:inputType="textPassword"
        android:background="@null"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/video_settings_showconfirmpsk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="15dp"
        android:src="@drawable/psk_close"
        />
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/one_divider_height"
        android:background="@color/grey"/>
    <Button
        android:id="@+id/video_settings_btn"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/video_settings_btn"
        android:textSize="@dimen/add_title_height"
        android:textColor="@color/white"
        android:background="@drawable/add_selector"/>
</LinearLayout>
